generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      UserRole @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  ADMIN
  CUSTOMER
}

model Philosopher {
  id              String           @id @default(cuid())
  name            String           @unique
  slug            String           @unique
  era             PhilosophicalEra
  imageUrl        String
  description     String
  birthDate       DateTime
  deathDate       DateTime?
  birthPlace      String
  deathPlace      String?
  schoolOfThought String
  notableWorks    String[]
  mainIdeas       String[]
  influences      String[]
  influenced      String[]
  quotes          String[]
  wikipediaUrl    String
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

enum PhilosophicalEra {
  ANCIENT_EAST // 3000-500 BCE (Early Eastern Philosophy)
  PRE_SOCRATIC // 600-400 BCE (Before Socrates)
  CLASSICAL_GREEK // 470-322 BCE (Socrates, Plato, Aristotle)
  HELLENISTIC // 322-31 BCE (Epicureans, Stoics, Skeptics)
  ROMAN // 31 BCE-476 CE
  MEDIEVAL_EARLY // 476-1000 (Early Church Fathers, Byzantine)
  MEDIEVAL_HIGH // 1000-1300 (Scholasticism, Islamic Golden Age)
  MEDIEVAL_LATE // 1300-1453 (Nominalism, Natural philosophy)
  RENAISSANCE // 1453-1600 (Humanism, Scientific Revolution)
  EARLY_MODERN // 1600-1750 (Rationalism, Empiricism)
  ENLIGHTENMENT // 1750-1800 (Age of Reason)
  ROMANTICISM // 1800-1850 (German Idealism, Romanticism)
  LATE_MODERN // 1850-1920 (Marxism, Existentialism, Pragmatism)
  EARLY_CONTEMPORARY // 1920-1960 (Logical Positivism, Phenomenology)
  POSTMODERN // 1960-2000 (Deconstruction, Post-structuralism)
  CONTEMPORARY // 2000-present
}
